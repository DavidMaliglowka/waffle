# Firebase Cloud Functions Environment Configuration
# Copy this file to .env for local development

# ===========================================
# ENVIRONMENT SETTINGS
# ===========================================

# Environment (development, staging, production)
NODE_ENV=development

# ===========================================
# FIREBASE CONFIGURATION
# ===========================================

# Firebase Project ID (automatically set by Firebase, but can be overridden)
# FIREBASE_PROJECT_ID=your-firebase-project-id

# ===========================================
# SECURITY CONFIGURATION
# ===========================================

# Enable App Check enforcement (set to 'true' in production)
ENFORCE_APP_CHECK=false

# Rate limiting configuration
RATE_LIMIT_WINDOW=60000
MAX_REQUESTS_PER_WINDOW=100

# CORS allowed origins (comma-separated)
ALLOWED_ORIGINS=https://waffle.app,https://www.waffle.app,capacitor://localhost

# ===========================================
# LOGGING AND MONITORING
# ===========================================

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Enable security event logging
ENABLE_SECURITY_LOGGING=true

# ===========================================
# EXTERNAL SERVICES (if needed in future)
# ===========================================

# Stripe API Key (for future payment features)
# STRIPE_SECRET_KEY=sk_test_...

# SendGrid API Key (for future email features)
# SENDGRID_API_KEY=SG.

# Twilio API Keys (for future SMS features)
# TWILIO_ACCOUNT_SID=
# TWILIO_AUTH_TOKEN=

# ===========================================
# DEVELOPMENT ONLY
# ===========================================

# Firebase Auth Emulator
# FIREBASE_AUTH_EMULATOR_HOST=localhost:9099

# Firestore Emulator
# FIRESTORE_EMULATOR_HOST=localhost:8080

# Firebase Storage Emulator
# FIREBASE_STORAGE_EMULATOR_HOST=localhost:9199

# ===========================================
# PRODUCTION OVERRIDES
# ===========================================

# In production, these should be set via Firebase Functions config
# or Google Cloud Secret Manager:

# firebase functions:config:set app.enforce_app_check=true
# firebase functions:config:set security.rate_limit_window=30000
# firebase functions:config:set security.max_requests=50 